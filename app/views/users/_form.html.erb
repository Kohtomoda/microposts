<div class="row">
  <div class="col-md-offset-2 col-md-4">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label "ログインパスワード" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "もう一度入力してください" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>
  <div class="col-md-4">
      <%= f.label "お住いの地域" %>
      <%= f.select :area, {
        "北海道" => "北海道", 
        "東北" => "東北",
        "関東" => "関東",
        "中部" => "中部",
        "近畿" => "近畿",
        "中国" => "中国",
        "四国" => "四国",
        "九州" => "九州"
        }  %>
      
       <%= f.label "自己紹介" %>
       <%= f.text_area :intro, :size => "20x10" %>

      <%= f.submit "新規登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>