<h1>Following</h1>



<div class="row">
  
  <aside class="col-md-3">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= link_to "フォロー", following_user_path(@user) %>
      </br>
      <%= link_to "フォロワー", follower_user_path(@user) %>
    </section>
  </aside>
  <div class="col-md-9">
    <% @following_users.each do |user| %>
      
        <div class="profile-card">
                <span class="follower-img"><%= gravatar_for(@user, size:180) %></span>
                <span class="follower-name"><%= link_to user.name, user %></span>
                
        </div>
      
    <% end %>
    </div>
    
</div>